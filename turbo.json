{
	"$schema": "https://turborepo.org/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["src/**", "ts/**", "package.json", "tsconfig.*"],
			"outputs": ["cjs/**", "esm/**", "tslib/**", "*.tsbuildinfo"]
		},
		"build:doc": {
			"dependsOn": ["^build"]
		},
		"//#check": {},
		"clean": {
			"cache": false
		},
		"coverage": {
			"dependsOn": ["@repobuddy/jest#build", "build"],
			"inputs": ["src/**", "ts/**", "package.json", "tsconfig.*"],
			"outputs": ["coverage/**"]
		},
		"depcheck": {
			"dependsOn": ["build"]
		},
		"dev": {
			"cache": false
		},
		"lint": {
			"dependsOn": ["^build"],
			"inputs": ["src/**", "ts/**", "package.json"]
		},
		"size": {
			"dependsOn": ["build"]
		},
		"test": {
			"dependsOn": ["@repobuddy/jest#build", "build"],
			"inputs": ["src/**", "ts/**", "package.json", "tsconfig.*"]
		},
		"test:list": {
			"dependsOn": ["build"],
			"inputs": ["src/**", "ts/**", "package.json"]
		}
	}
}
