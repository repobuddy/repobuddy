{
	"$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
      "indentStyle": "tab",
      "lineEnding": "lf",
      "lineWidth": 120,
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}
