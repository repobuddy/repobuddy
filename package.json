{
	"name": "root",
	"private": true,
	"homepage": "https://github.com/repobuddy/repobuddy",
	"bugs": {
		"url": "https://github.com/repobuddy/repobuddy/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/repobuddy/repobuddy.git"
	},
	"scripts": {
		"pb": "pnpm --filter ./packages/biome",
		"buddy": "pnpm --filter ./packages/buddy",
		"build": "turbo run build",
		"build:doc": "pnpm build",
		"clean": "turbo run clean",
		"coverage": "turbo run coverage",
		"cs": "changeset",
		"depcheck": "turbo run depcheck",
		"check": "biome check .",
		"check:fix": "biome check . --fix",
		"format": "biome format . --write",
		"jest": "pnpm --filter @repobuddy/jest",
		"js-cjs": "pnpm --filter js-cjs",
		"js-esm": "pnpm --filter js-esm",
		"jsdom-ts": "pnpm --filter jsdom-ts",
		"lint": "biome lint .",
		"lint:eslint": "cross-env TIMING=1 eslint --ext=ts,tsx,js,yaml,yml .",
		"nuke": "pnpm --no-bail --filter=* nuke && pnpm --no-bail nuke:local",
		"nuke:local": "rimraf node_modules",
		"plop": "plop",
		"release": "pnpm build && changeset publish",
		"size": "turbo run size",
		"dtj": "pnpm --filter dual-ts-jest",
		"test": "turbo run test",
		"test:list": "turbo run test:list",
		"test:watch": "jest --watch",
		"ts": "pnpm --filter ./packages/typescript",
		"ts-cjs": "pnpm --filter ts-cjs",
		"ts-esm": "pnpm --filter ts-esm",
		"two-chalk": "pnpm --filter two-chalk",
		"verify": "turbo run build lint coverage depcheck size",
		"version": "changeset version",
		"web": "pnpm --filter ./website"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@changesets/cli": "^2.26.0",
		"@repobuddy/biome": "workspace:^",
		"repobuddy": "workspace:^",
		"@repobuddy/typescript": "workspace:^",
		"@types/node": "^20.0.0",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-harmony": "^7.2.0",
		"eslint-plugin-yml": "~1.15.0",
		"jest": "^29.7.0",
		"plop": "^4.0.0",
		"rimraf": "^6.0.0",
		"turbo": "^2.3.0",
		"typescript": "^5.4.3"
	},
	"packageManager": "pnpm@9.13.2"
}
