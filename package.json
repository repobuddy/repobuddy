{
  "private": true,
  "scripts": {
    "buddy": "pnpm --filter ./packages/buddy",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "coverage": "turbo run coverage",
    "cs": "changeset",
    "depcheck": "turbo run depcheck",
    "jest": "pnpm --filter @repobuddy/jest",
    "js-cjs": "pnpm --filter js-cjs",
    "js-esm": "pnpm --filter js-esm",
    "jsdom-ts": "pnpm --filter jsdom-ts",
    "lint": "cross-env TIMING=1 eslint --ext=ts,tsx,js,yaml,yml .",
    "nuke": "pnpm --no-bail --filter=* nuke && pnpm --no-bail nuke:local",
    "nuke:local": "rimraf node_modules",
    "plop": "plop",
    "release": "pnpm build && changeset publish",
    "size": "turbo run size",
    "test": "turbo run test",
    "test:list": "turbo run test:list",
    "test:watch": "jest --watch",
    "ts": "pnpm --filter ./packages/typescript",
    "ts-cjs": "pnpm --filter ts-cjs",
    "ts-esm": "pnpm --filter ts-esm",
    "two-chalk": "pnpm --filter two-chalk",
    "verify": "turbo run build lint coverage depcheck size",
    "version": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@repobuddy/typescript": "workspace:^",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-harmony": "^7.1.2",
    "eslint-plugin-yml": "~1.8.0",
    "jest": "^29.5.0",
    "plop": "^3.1.1",
    "rimraf": "^5.0.0",
    "turbo": "^1.9.3",
    "typescript": "^5.0.4"
  },
  "packageManager": "pnpm@8.6.6"
}
