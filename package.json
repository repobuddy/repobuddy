{
	"name": "root",
	"private": true,
	"homepage": "https://github.com/repobuddy/repobuddy",
	"bugs": {
		"url": "https://github.com/repobuddy/repobuddy/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/repobuddy/repobuddy.git"
	},
	"scripts": {
		"buddy": "pnpm --filter ./packages/buddy",
		"build": "turbo run build",
		"build:doc": "pnpm build",
		"check": "biome check .",
		"check:fix": "biome check . --fix",
		"clean": "turbo run clean",
		"coverage": "turbo run coverage",
		"cs": "changeset",
		"depcheck": "turbo run depcheck",
		"dtj": "pnpm --filter dual-ts-jest",
		"format": "biome format . --write",
		"jest": "pnpm --filter @repobuddy/jest",
		"js-cjs": "pnpm --filter js-cjs",
		"js-esm": "pnpm --filter js-esm",
		"jsdom-ts": "pnpm --filter jsdom-ts",
		"lint": "eslint .",
		"nuke": "pnpm --no-bail --filter=* nuke && pnpm --no-bail nuke:local",
		"nuke:local": "rimraf node_modules",
		"pb": "pnpm --filter ./packages/biome",
		"plop": "plop",
		"prepare": "playwright install chromium",
		"release": "pnpm build && changeset publish",
		"rt": "pnpm --filter @repobuddy/test",
		"size": "turbo run size",
		"test": "turbo run test",
		"test:list": "turbo run test:list",
		"ts": "pnpm --filter ./packages/typescript",
		"ts-cjs": "pnpm --filter ts-cjs",
		"ts-esm": "pnpm --filter ts-esm",
		"two-chalk": "pnpm --filter two-chalk",
		"verify": "turbo run check lint coverage depcheck size",
		"verify:ci": "turbo run check lint coverage depcheck size --concurrency=1",
		"version": "changeset version",
		"vt": "pnpm --filter ./packages/vitest",
		"web": "pnpm --filter ./website"
	},
	"dependencies": {
		"@types/react": "^19.1.3",
		"pathe": "^2.0.3",
		"playwright": "^1.53.2"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.6",
		"@changesets/cli": "^2.26.0",
		"@repobuddy/biome": "workspace:^",
		"@repobuddy/typescript": "workspace:^",
		"@types/node": "^20.0.0",
		"eslint": "^9.26.0",
		"eslint-plugin-yml": "~1.18.0",
		"playwright": "latest",
		"plop": "^4.0.0",
		"repobuddy": "workspace:^",
		"rimraf": "^6.0.1",
		"turbo": "^2.5.3",
		"typescript": "^5.8.3"
	},
	"packageManager": "pnpm@10.12.1"
}
